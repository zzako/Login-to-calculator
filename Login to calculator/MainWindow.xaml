<Window x:Class="Login_to_calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_to_calculator"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="Black">
        <Label Content="Username:" HorizontalAlignment="Left" Margin="92,84,0,0" VerticalAlignment="Top" Width="96" Height="42" Background="Black" FontSize="18" Foreground="White"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="92,152,0,0" VerticalAlignment="Top" Width="96" Height="42" Background="Black" FontSize="18" Foreground="White"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="42" Margin="251,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" Height="42" Margin="251,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <Button x:Name="Button1" Content="Login" HorizontalAlignment="Left" Margin="92,243,0,0" VerticalAlignment="Top" Width="119" Height="43" Click="Button1_Click"/>

    </Grid>
</Window>
